# ==============================
# Public domains (DNS must point to your server)
# ==============================
APP_DOMAIN=proofmesh.example.com
API_DOMAIN=api.proofmesh.example.com

# Email used for Let's Encrypt registration
TRAEFIK_ACME_EMAIL=admin@proofmesh.org

# ==============================
# Database
# ==============================
POSTGRES_USER=proofmesh
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=proofmesh
DATABASE_URL=postgresql+asyncpg://proofmesh:change-this-password@postgres:5432/proofmesh

# ==============================
# Redis
# ==============================
REDIS_URL=redis://redis:6379

# ==============================
# MinIO / S3
# ==============================
MINIO_ROOT_USER=proofmesh
MINIO_ROOT_PASSWORD=change-this-password
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=proofmesh
S3_SECRET_KEY=change-this-password
S3_BUCKET=proofmesh
S3_REGION=us-east-1
S3_SECURE=false

# ==============================
# Internal services
# ==============================
LATEX_COMPILER_URL=http://texlive-compiler:9009
LATEX_COMPILE_TIMEOUT=60
LEAN_RUNNER_URL=http://lean-runner:9008
LEAN_TIMEOUT=60

# ==============================
# App
# ==============================
DEBUG=false
CORS_ORIGINS=["https://proofmesh.example.com"]
JWT_SECRET_KEY=replace-with-a-long-random-secret
DEMO_ACCESS_CODE=PR00FM3SH
DEMO_CODE_REQUIRED_IN_PRODUCTION=true
ALLOW_REGISTRATION_IN_PRODUCTION=false
ALLOW_PASSWORD_LOGIN_IN_PRODUCTION=false
NEXT_PUBLIC_DEMO_CODE_REQUIRED=true
NEXT_PUBLIC_ENABLE_ACCOUNT_AUTH=false

# ==============================
# Google AI
# ==============================
GEMINI_API_KEY=your-api-key-here
GOOGLE_GENERATIVE_AI_API_KEY=your-api-key-here
